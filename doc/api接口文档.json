        "/user/logout": {
            "post": {
                "tags": [
                    "用户模块"
                ],
                "summary": "用户登出",
                "description": "登出当前用户",
                "operationId": "logout",
                "responses": {
                    "200": {
                        "description": "登出成功",
                        "content": {
                            "*/*": {
                                "schema": {
                                    "$ref": "#/components/schemas/Result"
                                }
